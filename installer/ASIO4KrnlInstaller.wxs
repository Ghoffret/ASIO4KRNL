<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="ASIO4KRNL" Language="1033" Version="0.2.0" Manufacturer="ASIO4KRNL Project" UpgradeCode="{CDE4B0E2-2E5F-4C3F-95C8-1234567890AB}">
    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" 
             Description="ASIO4KRNL - Audio Stream Input/Output Kernel Driver"
             Comments="Low-latency audio driver for Windows"
             Manufacturer="ASIO4KRNL Project"/>
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <Condition Message="Administrator privileges required.">Installed OR Privileged</Condition>
    <MediaTemplate/>

    <Feature Id="DefaultFeature" Level="1" Title="ASIO4KRNL" Description="Complete ASIO4KRNL installation">
      <ComponentGroupRef Id="AppComponents"/>
    </Feature>
    
    <!-- Include WixUI for user-friendly installation -->
    <UIRef Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR" />
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLDIR" Name="ASIO4KRNL"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ProgramMenuDir" Name="ASIO4KRNL"/>
      </Directory>
      <Directory Id="DesktopFolder" />
      <Directory Id="System32Folder" />
      <Directory Id="SystemFolder" />
    </Directory>
  </Fragment>

  <Fragment>
    <ComponentGroup Id="AppComponents" Directory="INSTALLDIR">
      <!-- Driver Component -->
      <Component Id="DriverFiles" Guid="{F4A9F16C-9A61-4F94-9695-E7BA984B1234}">
        <File Id="DriverSys" Source="$(var.DriverPath)\ASIOUSB.sys" KeyPath="yes"/>
        <File Id="DriverInf" Source="..\src\driver\ASIOUSB.inf" />
        <RemoveFile Id="RemoveDriverInf" Name="ASIOUSB.inf" On="uninstall" />
      </Component>
      
      <!-- GUI Application Component -->
      <Component Id="GuiExe" Guid="{AC91A2B2-8BBA-4C1E-A78B-DF12345C5678}">
        <File Id="GuiApplication" Source="$(var.GuiPath)\ASIO4KrnlGUI.exe" KeyPath="yes"/>
        <Shortcut Id="StartMenuShortcut" Directory="ProgramMenuDir" Name="ASIO4KRNL Settings" 
                  WorkingDirectory="INSTALLDIR" Icon="AppIcon.ico" Advertise="no" />
        <Shortcut Id="DesktopShortcut" Directory="DesktopFolder" Name="ASIO4KRNL Settings" 
                  WorkingDirectory="INSTALLDIR" Icon="AppIcon.ico" Advertise="no" />
        <RemoveFile Id="RemoveDesktopShortcut" On="uninstall" Name="ASIO4KRNL Settings.lnk" Directory="DesktopFolder" />
        <RemoveFolder Id="RemoveStartMenuDir" On="uninstall" Directory="ProgramMenuDir" />
      </Component>
      
      <!-- Documentation Component -->
      <Component Id="Documentation" Guid="{C1234567-89AB-4AF8-B012-DEF123456789}">
        <File Id="ReadmeFile" Source="..\README.md" KeyPath="yes"/>
        <File Id="LicenseFile" Source="..\LICENSE" />
        <File Id="InstallerReadme" Source="README.txt" />
      </Component>
      
      <!-- Registry Component for ASIO registration -->
      <Component Id="AsioRegistry" Guid="{D2345678-9ABC-4EF0-B123-EF456789ABCD}">
        <RegistryKey Root="HKLM" Key="SOFTWARE\ASIO\ASIO4KRNL">
          <RegistryValue Type="string" Name="Description" Value="ASIO4KRNL Audio Driver" />
          <RegistryValue Type="string" Name="CLSID" Value="{12345678-9ABC-DEF0-1234-56789ABCDEF0}" />
        </RegistryKey>
      </Component>
    </ComponentGroup>
  </Fragment>

  <Fragment>
    <Icon Id="AppIcon.ico" SourceFile="AppIcon.ico"/>
    
    <!-- Custom Actions for Driver Installation -->
    <CustomAction Id="InstallDriver" Directory="INSTALLDIR" 
                  ExeCommand="pnputil /add-driver ASIOUSB.inf /install" 
                  Execute="deferred" Impersonate="no" Return="ignore" />
    
    <CustomAction Id="UninstallDriver" Directory="INSTALLDIR"
                  ExeCommand="pnputil /delete-driver ASIOUSB.inf /uninstall /force"
                  Execute="deferred" Impersonate="no" Return="ignore" />
    
    <!-- Launch GUI after installation -->
    <CustomAction Id="LaunchGUI" FileKey="GuiApplication" ExeCommand="" 
                  Execute="immediate" Return="asyncNoWait" />
    
    <!-- Installation Sequence -->
    <InstallExecuteSequence>
      <Custom Action="InstallDriver" After="InstallFiles">NOT Installed AND NOT REMOVE</Custom>
      <Custom Action="UninstallDriver" Before="RemoveFiles">REMOVE="ALL"</Custom>
    </InstallExecuteSequence>
    
    <!-- UI Sequence for post-install launch option -->
    <UI>
      <Publish Dialog="ExitDialog" Control="Finish" Event="DoAction" Value="LaunchGUI">
        WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed
      </Publish>
    </UI>
    
    <!-- Properties for installation options -->
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch ASIO4KRNL Settings" />
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOX" Value="1" />
  </Fragment>
</Wix>
